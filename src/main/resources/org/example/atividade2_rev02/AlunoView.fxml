<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15" prefHeight="400.0" prefWidth="350.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.atividade2_rev02.AlunoController"
      style="-fx-background-color: #fdfefe; -fx-border-color: #2e86c1; -fx-border-width: 2px; -fx-border-radius: 10px;">

    <Label text="Cadastro de Aluno" style="-fx-font-size: 18px;"/>

    <TextField fx:id="txtNome" promptText="Nome"/>
    <TextField fx:id="txtMatricula" promptText="Matrícula"/>
    <TextField fx:id="txtCurso" promptText="Curso"/>

    <Button text="Cadastrar Aluno" onAction="#cadastrarAluno"/>
    <Button text="Editar Matrícula" onAction="#editarMatricula"/>
    <Button text="Alterar Curso" onAction="#alterarCurso"/>

    <Label fx:id="lblStatus" text="" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;"/>

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
</VBox>
