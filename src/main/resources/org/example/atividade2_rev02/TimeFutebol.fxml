<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" prefWidth="350" prefHeight="400"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.atividade2_rev02.TimeFutebolController"
      style="-fx-background-color: #fcf3cf; -fx-border-color: #d68910; -fx-border-width: 2px; -fx-border-radius: 10px;">

    <Label text="Cadastro de Time de Futebol" style="-fx-font-size: 18px; -fx-text-fill: #af601a;"/>

    <TextField fx:id="txtNome" promptText="Nome do Time"/>
    <TextField fx:id="txtCidade" promptText="Cidade de Origem"/>
    <TextField fx:id="txtTitulos" promptText="Nº de Títulos"/>

    <Button text="Exibir Informações" onAction="#exibirInformacoes" style="-fx-background-color: #d35400; -fx-text-fill: white;"/>
    <Button text="Registrar Vitória Importante" onAction="#registrarVitoriaImportante" style="-fx-background-color: #e67e22; -fx-text-fill: white;"/>
    <Button text="Desafiar Outro Time" onAction="#desafiarOutroTime" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>

    <Button text="Limpar Campos" onAction="#limparCampos" style="-fx-background-color: #b03a2e; -fx-text-fill: white;"/>

    <Label fx:id="lblResultado" style="-fx-font-size: 14px; -fx-text-fill: #6e2c00;"/>

    <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>
</VBox>
